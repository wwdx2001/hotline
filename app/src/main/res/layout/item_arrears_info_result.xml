<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/color_white_ffffff"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户名称"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_entityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属站"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_entityName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_cisMrgGrp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="30"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cisMrgGrp" />

    <TextView
        android:id="@+id/tv_address1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欠费金额"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_cmTotalAmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="30"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv6"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询时间"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cmTotalAmt" />

    <TextView
        android:id="@+id/tv_QryTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minEms="11"
        android:text="2423534"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欠费金额零头"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_QryTime" />

    <TextView
        android:id="@+id/tv_chargeAmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="30"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv3" />

</android.support.constraint.ConstraintLayout>