<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0176da"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white_ffffff"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="5"
                android:text="公告类型："
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minEms="5"
                android:text="发布时间："
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="@+id/tv1"
                app:layout_constraintTop_toBottomOf="@+id/tv_leixing" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minEms="5"
                android:text="发布人："
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="@+id/tv2"
                app:layout_constraintTop_toBottomOf="@+id/tv_fabushijian" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minEms="5"
                android:text="发布单位："
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="@+id/tv3"
                app:layout_constraintTop_toBottomOf="@+id/tv_faburen" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minEms="5"
                android:text="停水时间："
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="@+id/tv4"
                app:layout_constraintTop_toBottomOf="@+id/tv_fabudanwei" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minEms="5"
                android:text="停水范围："
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="@+id/tv5"
                app:layout_constraintTop_toBottomOf="@+id/tv_tingshuishijian" />


            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/color_black_2"
                app:layout_constraintTop_toBottomOf="@+id/tv_tingshuifanwei" />

            <!-- <TextView
                 android:id="@+id/tv7"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:minEms="5"
                 android:text="公告内容："
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="pa"
                 app:layout_constraintTop_toBottomOf="@+id/line" />-->

            <TextView
                android:id="@+id/tv_leixing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@+id/tv1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv1" />

            <TextView
                android:id="@+id/tv_fabushijian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发布时间"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@+id/tv2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv2" />

            <TextView
                android:id="@+id/tv_faburen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发布人"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@+id/tv3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv3" />

            <TextView
                android:id="@+id/tv_fabudanwei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发布单位"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@+id/tv4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv4" />

            <TextView
                android:id="@+id/tv_tingshuishijian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="停水时间"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@+id/tv5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv5" />

            <TextView
                android:id="@+id/tv_tingshuifanwei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="停水范围"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@+id/tv6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv6" />

            <TextView
                android:id="@+id/tv_neirong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_bg"
                android:padding="10dp"
                android:text="公告内容"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="@+id/tv6"
                app:layout_constraintTop_toBottomOf="@+id/line" />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</LinearLayout>