<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/color_white_ffffff"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账单类型"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ftType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv0"
        app:layout_constraintRight_toLeftOf="@+id/tv1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账单类型说明"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="@+id/tv3"
        app:layout_constraintLeft_toRightOf="@+id/tv_ftType"
        app:layout_constraintRight_toLeftOf="@+id/tv_ftTypeDesc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ftTypeDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账单编号"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ftType" />

    <TextView
        android:id="@+id/tv_siBillid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minEms="4"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv2"
        app:layout_constraintRight_toLeftOf="@+id/tv3"
        app:layout_constraintTop_toTopOf="@+id/tv2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账单日期"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@id/tv_siBillid"
        app:layout_constraintRight_toLeftOf="@+id/tv_BillDate"
        app:layout_constraintTop_toBottomOf="@+id/tv_ftTypeDesc" />

    <TextView
        android:id="@+id/tv_BillDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易金额"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_billVol" />

    <TextView
        android:id="@+id/tv_cmAmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv4"
        app:layout_constraintRight_toLeftOf="@+id/tv6"
        app:layout_constraintTop_toTopOf="@+id/tv4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结清标志"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv_billVol"
        app:layout_constraintRight_toLeftOf="@+id/tv_payFlg"
        app:layout_constraintTop_toBottomOf="@id/tv_BillDate" />

    <TextView
        android:id="@+id/tv_payFlg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="费用类型描述"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="@+id/tv5"
        app:layout_constraintLeft_toRightOf="@id/tv_cmAmt"
        app:layout_constraintRight_toLeftOf="@+id/tv_saTypeDesc"
        app:layout_constraintTop_toBottomOf="@id/tv_payFlg" />

    <TextView
        android:id="@+id/tv_saTypeDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2019"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv6"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开账水量"
        android:textColor="@color/text_content"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_siBillid" />

    <TextView
        android:id="@+id/tv_billVol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="-"
        android:textColor="@color/text_item"
        android:textSize="@dimen/text_size_meduim"
        app:layout_constraintLeft_toRightOf="@+id/tv7"
        app:layout_constraintRight_toLeftOf="@+id/tv5"
        app:layout_constraintTop_toTopOf="@+id/tv7"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>