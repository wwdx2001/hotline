<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/radius_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--head部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--工单编号-->
            <TextView
                android:id="@+id/search_history_result_item_tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:textIsSelectable="true"
                android:textColor="@color/color_gray_666E81"
                android:textSize="@dimen/textsize_20" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d2d2"></View>

        <!--body-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_xiaogenhao"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_xiaogen_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_lianxidianhua"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_address"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_fanyingren"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_reflect_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

            </LinearLayout>

            <!--反映来源-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="0.7"-->
                <!--android:orientation="horizontal">-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_fanyinglaiyuan"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_reflect_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="0.7"-->
                <!--android:orientation="horizontal">-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_fanyingleixing"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_reflect_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_fanyingneirong"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_reflect_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_dispatch_time"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_tv_dispatch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/text_chulishixian"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/search_history_result_item_handle_tv_time_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_gray_767676"
                    android:textSize="@dimen/textsize_16" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>