<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_call"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_5"
    android:padding="@dimen/margin_3"
    app:cardCornerRadius="@dimen/margin_10">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constriant_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">

        <TextView
            android:id="@+id/tv1"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="序号"
            android:textIsSelectable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_collection_type"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="center_vertical"
            android:text=""
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv1"
            app:layout_constraintLeft_toRightOf="@+id/tv1"
            app:layout_constraintTop_toTopOf="@+id/tv1" />

        <TextView
            android:id="@+id/TV11"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="账户编号："
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv1"
            app:layout_constraintRight_toLeftOf="@+id/tv_yonghubh" />

        <TextView
            android:id="@+id/tv_yonghubh"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_blue_0176da"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/TV11"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/TV11" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@color/color_gray_ea_divider"
            app:layout_constraintTop_toBottomOf="@+id/tv1" />

        <TextView
            android:id="@+id/tv3"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="客户名称："
            android:textIsSelectable="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv1"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <TextView
            android:id="@+id/tv_kehumc"
            style="@style/font_mid_black_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text=""
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv3"
            app:layout_constraintLeft_toRightOf="@+id/tv3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv3" />


        <TextView
            android:id="@+id/tv5"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="用水地址："
            android:textIsSelectable="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv3"
            app:layout_constraintTop_toBottomOf="@+id/tv3" />

        <TextView
            android:id="@+id/tv_yongshuidizhi"
            style="@style/font_mid_black_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text=""
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv5"
            app:layout_constraintLeft_toRightOf="@+id/tv5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv5" />


        <TextView
            android:id="@+id/tv6"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="涉水代码："
            android:textIsSelectable="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv5"
            app:layout_constraintTop_toBottomOf="@+id/tv5" />

        <TextView
            android:id="@+id/tv_sheshuidm"
            style="@style/font_mid_black_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text=""
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv6"
            app:layout_constraintLeft_toRightOf="@+id/tv6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv6" />

        <TextView
            android:id="@+id/tv7"
            style="@style/font_mid_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="欠费金额："
            android:textIsSelectable="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv6"
            app:layout_constraintTop_toBottomOf="@+id/tv6" />

        <TextView
            android:id="@+id/tv_qianfeije"
            style="@style/font_mid_black_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="@color/color_red_ff0000"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv7"
            app:layout_constraintLeft_toRightOf="@+id/tv7"
            app:layout_constraintRight_toLeftOf="@+id/tv_update"
            app:layout_constraintTop_toTopOf="@+id/tv7" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_overrate_border_blue"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingStart="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_5"
            android:text="更新金额"
            android:visibility="gone"
            android:textColor="@color/color_0176da"
            app:layout_constraintBottom_toBottomOf="@+id/tv7"
            app:layout_constraintTop_toTopOf="@+id/tv7"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/txt_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_handle_order_blue_48px"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="操作"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/textsize_14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_qianfeije" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
