<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sh3h.hotline.ui.multimedia.signup.SignView
        android:id="@+id/dialog_sign_up_signview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:lineColor="@color/color_black_000000"
        app:lineWidth="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/signup_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/signup_clear_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@mipmap/ic_signup_clear"
                android:text="@string/text_signup_clear"
                android:textColor="@color/color_0176da" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>