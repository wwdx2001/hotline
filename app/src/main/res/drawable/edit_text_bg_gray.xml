<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_0176da"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="15dp"
                android:right="15dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_gray_6e"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="15dp"
                android:right="15dp"/>
        </shape>
    </item>

</selector>